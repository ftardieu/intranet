          <div class="col-sm-4">
          {# Génération de l'input. #}
          {{ form_widget(form.qteActuelle, {'attr': {'class': 'form-control'}}) }}
          </div>
        </div>
         <div class="form-group">
          {{ form_label(form.Dluo, "Dluo ", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
          {# Affichage des erreurs pour ce champ précis. #}
          {{ form_errors(form.Dluo) }}

          <div class="col-sm-4">
          {# Génération de l'input. #}
          {{ form_widget(form.Dluo) }}
          </div>
        </div>




        <div class="form-group">
          <div class="col-md-offset-3">
            <input class="btn btn-sm btn-primary" type="submit" name="Envoie" value="Créer" />
          </div>
        </div>
        {{ form_end(form) }}
         
      </div>
</div>
</div>

{% endblock %}