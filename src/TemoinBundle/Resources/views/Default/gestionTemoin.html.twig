<div class="container">
      <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Création d'un témoin</h3>
      </div>
      <div class="panel-body">
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        <div class="form-group">
          {{ form_label(form.NomTemoin, "Nom du témoin ", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
          {# Affichage des erreurs pour ce champ précis. #}
          {{ form_errors(form.NomTemoin) }}

          <div class="col-sm-4">
          {# Génération de l'input. #}
          {{ form_widget(form.NomTemoin, {'attr': {'class': 'form-control'}}) }}
          </div>
        </div>

        <div class="form-group">
          {{ form_label(form.Description, "Description ", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
          {# Affichage des erreurs pour ce champ précis. #}
          {{ form_errors(form.Description) }}

          <div class="col-sm-4">
          {# Génération de l'input. #}
          {{ form_widget(form.Description, {'attr': {'class': 'form-control'}}) }}
          </div>
        </div>
        <div class="form-group">
          {{ form_label(form.Theorie, "Theorie du temoin ", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
          {# Affichage des erreurs pour ce champ précis. #}
