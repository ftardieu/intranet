          <div class="col-sm-4">
          {# Génération de l'input. #}
          {{ form_widget(form.Theorie, {'attr': {'class': 'form-control'}}) }}
          </div>
        </div>

         <div class="form-group">
          {{ form_label(form.numLot, "n° de lot  ", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
          {# Affichage des erreurs pour ce champ précis. #}
          {{ form_errors(form.numLot) }}

          <div class="col-sm-4">
          {# Génération de l'input. #}
          {{ form_widget(form.numLot, {'attr': {'class': 'form-control'}}) }}
          </div>
        </div>
         <div class="form-group">
          {{ form_label(form.qteDepart, "Quantité de départ ", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
          {# Affichage des erreurs pour ce champ précis. #}
          {{ form_errors(form.qteDepart) }}

          <div class="col-sm-4">
          {# Génération de l'input. #}
          {{ form_widget(form.qteDepart, {'attr': {'class': 'form-control'}}) }}
          </div>
        </div>
